{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN e-commerce web app",
  "main": "server.js",
  "scripts": {
    "server": "npm run data:import && npm run watch --prefix server",
    "client": "npm start --prefix client",
    "watch": "npm run server & npm run client",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "data:import": "node server/src/seeder",
    "data:destroy": "node server/src/seeder -d",
    "deploy": "npm run build --prefix client && npm start --prefix server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmaksi/proshop.git"
  },
  "keywords": [
    "ecommerce",
    "mern"
  ],
  "author": "Mark Maksi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mmaksi/proshop/issues"
  },
  "homepage": "https://github.com/mmaksi/proshop#readme"
}
